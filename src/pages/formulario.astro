---
// filepath: c:\NuevaMamboApp\MAMBOAPP\src\pages\formulario.astro
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<Navbar />

<div class="form-container">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">Comparte tu Receta</h2>
  <form id="recipeForm" class="space-y-4">
    <div>
      <label for="nombre">Nombre</label>
      <input type="text" id="nombre" name="nombre" class="border border-gray-300 rounded p-2 w-full" required />
    </div>
    <div>
      <label for="ingredientes">Ingredientes</label>
      <textarea id="ingredientes" name="ingredientes" class="border border-gray-300 rounded p-2 w-full" required></textarea>
    </div>
    <div>
      <label for="instrucciones">Instrucciones</label>
      <textarea id="instrucciones" name="instrucciones" class="border border-gray-300 rounded p-2 w-full" required></textarea>
    </div>
    <button type="submit" class="bg-blue-500 text-white rounded px-4 py-2 hover:bg-blue-600">
      Guardar Receta
    </button>
  </form>
</div>

<Footer />

<script>
  const recipeForm = document.getElementById('recipeForm');
  if (recipeForm) {
    recipeForm.addEventListener('submit', async function(event) {
      event.preventDefault();
      const form = event.target as HTMLFormElement;
      if (!form) {
        alert('Formulario no encontrado');
        return;
      }
      const formData = {
        nombre: (form.elements.namedItem('nombre') as HTMLInputElement)?.value,
        ingredientes: (form.elements.namedItem('ingredientes') as HTMLTextAreaElement)?.value,
        instrucciones: (form.elements.namedItem('instrucciones') as HTMLTextAreaElement)?.value,
      };
      try {
        const response = await fetch('/api/aplipostgres.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData),
        });
        if (response.ok) {
          form.reset();
          alert('Receta guardada con Ã©xito');
        } else {
          alert('Error al guardar la receta');
        }
      } catch (error) {
        alert('Error al enviar los datos');
        console.error(error);
      }
    });
  }
</script>
